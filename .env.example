# Server Configuration
PORT=3008
NODE_ENV=development

# MongoDB Configuration (Metadata y reportes)
MONGODB_URI=mongodb://localhost:27017/business_report
MONGODB_DB_NAME=business_report

# Redis Configuration (para BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ClickHouse Configuration (Big Data Analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=business_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# PostgreSQL/TimescaleDB (Time-series data)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DATABASE=business_timeseries
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=postgres

# File Storage
STORAGE_PATH=./storage/reports
STORAGE_MAX_SIZE_MB=100
FILE_RETENTION_DAYS=7

# Report Configuration
MAX_ROWS_EXCEL=100000
MAX_ROWS_CSV=1000000
PDF_TIMEOUT_MS=30000
PUPPETEER_EXECUTABLE_PATH=

# Queue Configuration
QUEUE_REPORT_NAME=report-generation-queue
QUEUE_ML_NAME=ml-analysis-queue
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=business-report
KAFKA_GROUP_ID=business-report-group
KAFKA_TOPIC_REPORTS=business.reports
KAFKA_TOPIC_ANALYTICS=business.analytics
KAFKA_TOPIC_LOGS=business.logs

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
ML_MODELS_PATH=./ml_models
ML_TRAINING_ENABLED=true
ML_MIN_DATA_POINTS=100

# Analytics Configuration
ENABLE_ANOMALY_DETECTION=true
ENABLE_FORECASTING=true
ENABLE_KPI_SUGGESTIONS=true
ENABLE_NLP_QUERIES=true
ANOMALY_THRESHOLD=2.5
FORECAST_PERIODS=12

# Business Services Integration
MENSAJERIA_SERVICE_URL=http://localhost:3006
MENSAJERIA_API_KEY=your-mensajeria-api-key
LOG_SERVICE_URL=http://localhost:3005
LOG_API_KEY=your-log-api-key

# Security
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50
